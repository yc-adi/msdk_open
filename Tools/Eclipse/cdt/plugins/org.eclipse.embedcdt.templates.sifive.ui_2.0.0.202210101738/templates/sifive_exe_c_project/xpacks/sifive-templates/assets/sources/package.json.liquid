{
  "name": "{{ projectName }}",
  "version": "0.0.1",
  "description": "An xPack with a {{ content }} application running on {{ boardDescription }}",
  "main": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "xmake build -- all",
    "clean": "xmake build -- clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<user-id>/{{ projectName }}.git"
  },
  "bugs": {
    "url": "https://github.com/<user-id>/{{ projectName }}/issues"
  },
  "homepage": "https://github.com/<user-id>/{{ projectName }}",
  "keywords": [
    "xpack",
    "c",
    "c++",
    "micro-os-plus",
    "risc-v",
    "sifive",
    "corecomplex"
  ],
  "author": {
    "name": "",
    "email": "",
    "url": ""
  },
  "contributors": [
    {
      "name": "Liviu Ionescu",
      "email": "ilg@livius.net",
      "url": "https://github.com/ilg-ul"
    }
  ],
  "license": "MIT",
  "config": {
    "xcdl": {
      "device": {
        "id": "{{ deviceName }}",
        "supplier": {
          "displayName": "SiFive",
          "id": "1"
        }
      },
      "board": {
        "id": "{{ boardName }}",
        "supplier": {
          "displayName": "SiFive",
          "id": "1"
        }
      }
    }
  },
  "dependencies": {
      "@micro-os-plus/diag-trace": "~1.0.7"
{% if syscalls == 'semihosting' -%}
      ,"@micro-os-plus/semihosting": "~2.0.2"
{% endif -%}
{% if boardName == 'hifive1' -%}
      ,"@sifive/hifive1-board": "~1.0.4"
{% elsif boardName == 'e31arty' or boardName == 'e51arty' -%}
      ,"@sifive/arty-boards": "~1.0.3"
{% endif -%}
  },
  "devDependencies": {
    "xmake": "~0.3.10",
    "@xpack-dev-tools/riscv-none-embed-gcc": "8.3.0-1.2.1",
    "@xpack-dev-tools/openocd": "0.10.0-14.3",
    "@xpack-dev-tools/windows-build-tools": "2.12.2-2"
  },
  "xpack": {}
}
